<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountFragment"

    android:paddingHorizontal="2pt"
    >

    <TextView
        android:id="@+id/accountTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Account: "
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/accountName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Name:"
        android:textSize="18sp"
        android:textColor="@color/white"

        android:layout_marginTop="15pt"
        />

    <TextView
        android:id="@+id/accountCalories"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Calories: "
        android:textSize="18sp"
        android:textColor="@color/white"

        android:layout_marginTop="45pt"
        />

    <TextView
        android:id="@+id/accountProteins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Proteins: "
        android:textSize="18sp"
        android:textColor="@color/white"

        android:layout_marginTop="60pt"
        />

    <TextView
        android:id="@+id/accountCarbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Carbs: "
        android:textSize="18sp"
        android:textColor="@color/white"

        android:layout_marginTop="75pt"
        />

    <TextView
        android:id="@+id/accountFats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Fats: "
        android:textSize="18sp"
        android:textColor="@color/white"

        android:layout_marginTop="90pt"
        />

    <TextView
        android:id="@+id/maxPRs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="MAX PRs: "
        android:textSize="18sp"
        android:textColor="@color/white"

        android:layout_marginTop="115pt"
        />

    <ListView
        android:id="@+id/accountList"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="140pt"
        android:layout_marginBottom="5pt"
        />

</FrameLayout>