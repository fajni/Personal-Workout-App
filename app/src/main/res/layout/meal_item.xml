<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="20dp"

    app:cardCornerRadius="15dp"

    app:cardElevation="10dp"
    >

    <TextView

        android:id="@+id/mealNumber"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Meal No.{Number}"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/discord_blue"

        android:paddingBottom="5dp"

        android:background="@color/discord_color3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="25dp"

        android:orientation="horizontal"

        android:paddingHorizontal="15dp"
        android:paddingBottom="5dp"

        android:background="@color/discord_color3"
        >

        <!-- CALORIES -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="Calories"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealCaloriesValue"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="value (kcal)"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- PROTEINS -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="Proteins"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealProteinsValue"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="value (g)"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- CARBS -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="Carbs"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealCarbsValue"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="value (g)"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- FATS -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="Fats"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealFatsValue"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="value (g)"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>